@{
    ViewData["Title"] = "Home Page";
}

@model List<Article>

<h1>BBC Articles</h1>

<form asp-action="Index" method="get">
    <input type="text" name="searchQuery" placeholder="Search articles..." value="@Context.Request.Query["searchQuery"]" />
    <button type="submit">Search</button>
</form>

@if (Model.Any())
{
    <div class="article-grid">
        @foreach (var article in Model)
        {
            <div class="article-card">
                <h3>@article.Title</h3>
                <div class="badge">@article.Section</div>
                <p>@article.Content.Substring(0, Math.Min(article.Content.Length, 200))...</p>
                <a href="@article.Url" target="_blank" class="btn btn-primary">Read Full Article</a>
                <div class="timestamp">Scraped: @article.ScrapedAt.ToLocalTime().ToString("g")</div>
            </div>
        }
    </div>
}
else
{
    <p>No articles found.</p>
}